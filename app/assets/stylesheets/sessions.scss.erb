$light-grey : #dad7e4;
$jade : #4be0c8;
$margin : 10%;

%shadow {
  -webkit-filter: drop-shadow(0px 0px 10px #dad7e4);
  filter: drop-shadow(0px 0px 10px #dad7e4);
}

.small {
  color: $light-grey;
}

.login-button, .login-field {
  box-shadow: 0px 0 3px 1px rgba(0, 0, 0, 0.2);
}

.login-button {
  background-color: $jade;
  color:white;
  font-size:16px;
  text-align:center;
  width:140px;
  height:40px;
  border:none;
  margin:0px;
  cursor: pointer;
}

.login-button:hover{
  background-color: lighten($jade, 10);
}

#login-title {
  background-color: #fdfdfe;
  width:290px;
  padding: 25px 40px 25px 40px;
}

#login-main {
  padding: 20px 40px 40px 40px;
  width:290px;
}

#login-box {
  @extend %shadow;
  box-shadow: 0px 0px 15px 5px $light-grey \9;
  right:50%;
  margin-right: -600px;
  top:50%;
  margin-top:-200px;
  color: $light-grey;
}

#image {
  @extend %shadow;
  margin-left: -600px;
  top:50%;
  margin-top:-200px;
  left:50%;
}

form > input {
  height:40px;
  border: 1px #f2f6fc;
  width: 280px;
  margin: 10px 0 10px 0;
}

form > input {
  padding-left:10px;
}

input::placeholder {
  @extend .small;
}
form > input:focus {
  box-shadow: 0px 0 3px 1px transparentize($jade, 0.25);
  outline:none;
}

form > input {
  color: #666666;
}

.login-container {
  background-image:url('<%= image_path('login_background.png') %>');
  background-position:center;
  background-color:#f2f2f9;
  background-repeat:no-repeat;
  background-size: contain;
}

input[type=checkbox] {
  background: #fff;
  border:1px $light-grey;
  visibility:hidden !important;
  width:100px;
  color: $light-grey;
}

.alert {
  color: #ffb660;
  float:right;
}

#session_remember:after {
  content:"记住用户名";
  padding:0px;
  width:100px;
  visibility: visible;
  text-shadow: 0px 0px 5px;
}

#session_remember:hover {
  cursor:pointer;
}

#session_remember:checked {
  color: $jade;
}
